# Database Server Configuration
# Change 'host.docker.internal' if:
# - Running APIs locally (not in Docker): Use 'localhost'
# - SQL Server on different machine: Use IP address or hostname
SQL_SERVER=host.docker.internal
SQL_PORT=1435
SQL_USER=sa
SQL_PASSWORD=Engineering123!

# Database Connection Strings
CONFIG_CONNECTION=Server=host.docker.internal,1435;Database=ATSPM-Config;User Id=sa;Password=Engineering123!;TrustServerCertificate=True;Pooling=true;Timeout=30;Command Timeout=60;
AGGREGATION_CONNECTION=Server=host.docker.internal,1435;Database=ATSPM-Aggregation;User Id=sa;Password=Engineering123!;TrustServerCertificate=True;Pooling=true;Timeout=30;Command Timeout=60;
EVENTLOG_CONNECTION=Server=host.docker.internal,1435;Database=ATSPM-EventLogs;User Id=sa;Password=Engineering123!;TrustServerCertificate=True;Pooling=true;Timeout=30;Command Timeout=60;
IDENTITY_CONNECTION=Server=host.docker.internal,1435;Database=ATSPM-Identity;User Id=sa;Password=Engineering123!;TrustServerCertificate=True;Pooling=true;Timeout=30;Command Timeout=60;

# Database Providers - DO NOT CHANGE for SQL Server
ConfigContext_Provider=SqlServer
AggregationContext_Provider=SqlServer
EventLogContext_Provider=SqlServer
IdentityContext_Provider=SqlServer

